# Google Gemini API Key - Get yours at https://aistudio.google.com/apikey
# IMPORTANT: Replace with your actual API key before running
GEMINI_API_KEY=your_gemini_api_key_here

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/RestoPilotAI.db

# File Upload Settings
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp
ALLOWED_DATA_EXTENSIONS=csv,xlsx

# Model Settings
SALES_PREDICTION_HORIZON_DAYS=14
BCG_HIGH_SHARE_PERCENTILE=75
BCG_HIGH_GROWTH_PERCENTILE=75

# CORS Settings (for production, add your frontend domain)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Redis (optional - for production caching)
# REDIS_URL=redis://localhost:6379/0
